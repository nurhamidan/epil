<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.RegisterUserFormActivity">

    <EditText
        android:id="@+id/activity_register_user_form_edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama"/>
    <EditText
        android:id="@+id/activity_register_user_form_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Email"/>
    <EditText
        android:id="@+id/activity_register_user_form_edit_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Pengguna"/>
    <EditText
        android:id="@+id/activity_register_user_form_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Kata Sandi"/>
    <Button
        android:id="@+id/activity_register_user_form_button_daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAFTAR"/>

</LinearLayout>